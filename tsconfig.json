{
    "compilerOptions": {
      "target": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "sourceMap": true,
      "types": ["node"],
      "module": "esnext",
      "incremental": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "isolatedModules": true
    },
    "include": ["src/**/*.ts", "api/**/*.ts"],
    "exclude": ["node_modules", ".git"]
  }
  